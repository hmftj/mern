<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ayat Sajda</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f4;
            text-align: center;
            padding: 20px;
        }
        .ayah-container {
            background: white;
            margin: 20px auto;
            padding: 15px;
            border-radius: 10px;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
            max-width: 600px;
        }
        .sajda-icon {
            width: 30px;
            height: 30px;
            vertical-align: middle;
        }
    </style>
</head>
<body>
    <h1>Ayat Sajda</h1>
    <div id="ayat-list"></div>
    
    <script>
        async function fetchAyatSajda() {
            try {
                const response = await fetch('https://api.example.com/ayat_sajda'); // Replace with actual API
                const data = await response.json();
                const ayatList = document.getElementById("ayat-list");
                ayatList.innerHTML = "";
                
                data.data.ayahs.forEach(ayah => {
                    const ayahDiv = document.createElement("div");
                    ayahDiv.classList.add("ayah-container");
                    
                    ayahDiv.innerHTML = `
                        <h3>${ayah.surah.englishName} (${ayah.surah.number}:${ayah.numberInSurah})</h3>
                        <p>${ayah.text}</p>
                        <p>${ayah.sajda.obligatory ? '<svg class="sajda-icon" viewBox="0 0 64 64"><circle cx="32" cy="32" r="30" fill="#d9534f"/><text x="50%" y="50%" dominant-baseline="middle" text-anchor="middle" fill="white" font-size="18"> سجدة</text></svg>' : ''}</p>
                    `;
                    
                    ayatList.appendChild(ayahDiv);
                });
            } catch (error) {
                console.error("Error fetching Ayat Sajda:", error);
            }
        }
        
        fetchAyatSajda();
    </script>
</body>
</html>
